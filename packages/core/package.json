{
  "name": "@jest-decorated/core",
  "version": "0.0.1",
  "description": "Decorators for writing jest-based tests",
  "license": "MIT",
  "author": {
    "name": "Vitalii Shapovalov",
    "email": "<shapovalov.vitali.v@gmail.com>"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vitalishapovalov/jest-decorated.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "jest",
    "decorators",
    "typescript",
    "jest-decorated",
    "jest decorators",
    "jest typescript"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c rollup.config.ts --name typecheck",
    "test": "jest --coverage",
    "lint": "tslint -c tslint.ts 'src/**/*.ts'"
  },
  "dependencies": {
    "@jest-decorated/shared": "file:../shared",
    "@js-utilities/typecheck": "^0.1.4"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*.spec.(ts|js)$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/dist/"
    ]
  }
}
